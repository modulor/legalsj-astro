---
import Navbar from "./Navbar.astro";
---

<header id="main-header">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <div class="main-row">
          <div class="col">
            <a href="/"><img src="/img/logo.png" alt="logo" class="img-logo" /></a>
          </div>
          <div class="col d-none d-xl-flex">
            <Navbar />
          </div>
          <div class="col col-right d-none d-xl-flex">
            <div class="h-phone md-hide">
              <a href="https://wa.me/+5219711009999" target="_blank" class="phone-link">
                <span>&iquest;Necesita&nbsp;Ayuda?</span><i class="fa-brands fa-whatsapp"></i> 971 100 9999
              </a>
            </div>
          </div>
          <div class="col d-flex d-xl-none col-right">
            <a
              class="btn btn-primary btn-sm py-2 px-3"
              data-bs-toggle="offcanvas"
              href="#offcanvasExample"
              role="button"
              aria-controls="offcanvasExample"
            >
              <i class="fa-solid fa-bars"></i>
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</header>
<div class="offcanvas offcanvas-end" tabindex="-1" id="offcanvasExample" aria-labelledby="offcanvasExampleLabel">
  <div class="offcanvas-header">
    <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
  </div>
  <div class="offcanvas-body">
    <Navbar isMobile={true} />
  </div>
</div>

<style>
  header {
    transition: 0.7s;
    z-index: 1000;
    display: block;
    width: 100%;
    padding: 20px 0;

    .main-row {
      display: flex;
      justify-content: space-between;
    }

    .col {
      display: flex;
      align-items: center;
    }

    .col-right {
      justify-content: flex-end;
    }

    .img-logo {
      height: 40px;
    }

    .h-phone {
      position: relative;
      font-weight: bold;
      color: black;
      padding-left: 20px;
      font-size: 18px;
      padding-top: 10px;

      a.phone-link:hover,
      a.phone-link:active,
      a.phone-link:visited,
      a.phone-link:link {
        text-decoration: none;
        color: black;
      }

      span {
        display: inline-block;
        position: absolute;
        left: 40px;
        top: 0;
        font-size: 12px;
        font-weight: 500;
        color: var(--color-primary);
      }

      i {
        color: var(--color-primary);
      }
    }
  }

  .header-fixed {
    position: fixed;
    top: 0;
    padding: 0;
    background-color: white;
    padding: 10px 0;
    box-shadow: 0 4px 6px 0 rgba(10, 10, 10, 0.05);
    border: 0;
  }
</style>
