<header id="main-header">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <div class="main-row">
          <div class="col">
            <img src="/public/img/logo.png" alt="logo" class="img-logo" />
          </div>
          <div class="col d-none d-md-flex">
            <nav class="navbar navbar-expand-lg">
              <div class="container-fluid">
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                  <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                      <a class="nav-link" aria-current="page" href="/">Inicio</a>
                    </li>
                    <li class="nav-item">
                      <a class="nav-link" href="#">Quienes somos</a>
                    </li>
                    <li class="nav-item dropdown">
                      <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                        Servicios
                      </a>
                      <ul class="dropdown-menu">
                        <li><a class="dropdown-item" href="#">Legales</a></li>
                        <li><a class="dropdown-item" href="#">Contables</a></li>
                      </ul>
                    </li>
                    <li class="nav-item">
                      <a class="nav-link" href="#">Contacto</a>
                    </li>
                  </ul>
                </div>
              </div>
            </nav>
          </div>
          <div class="col col-right d-none d-md-flex">
            <div class="h-phone md-hide">
              <span>&iquest;Necesita&nbsp;Ayuda?</span><i class="fa fa-phone"></i> 971 100 9999
            </div>
          </div>
          <div class="col d-flex d-md-none col-right">MENU</div>
        </div>
      </div>
    </div>
  </div>
</header>

<style>
  header {
    position: absolute;
    display: block;
    width: 100%;
    padding: 20px 0;

    .main-row {
      display: flex;
      justify-content: space-between;
    }

    .col {
      display: flex;
      align-items: center;
    }

    .col-right {
      justify-content: flex-end;
    }

    .img-logo {
      height: 40px;
    }

    .nav-link {
      font-weight: 600;
    }

    .h-phone {
      position: relative;
      font-weight: bold;
      color: black;
      padding-left: 40px;
      font-size: 18px;
      padding-top: 10px;

      span {
        display: inline-block;
        position: absolute;
        left: 40px;
        top: 0;
        font-size: 12px;
        font-weight: 500;
        color: var(--main-color);
      }
    }
  }

  .header-fixed {
    position: fixed;
    top: 0;
    padding: 0;
    background-color: white;
    padding: 10px 0;
    box-shadow: 0 4px 6px 0 rgba(10, 10, 10, 0.05);
    border: 0;
  }
</style>
