      a.phone-link:hover,
      a.phone-link:active,
      a.phone-link:visited,
      a.phone-link:link {
        text-decoration: none;
        color: black;
      }

      span {
        display: inline-block;
        position: absolute;
        left: 40px;
        top: 0;
        font-size: 12px;
        font-weight: 500;
        color: var(--color-primary);
      }

      i {
        color: var(--color-primary);
      }
    }
  }

  .header-fixed {
    position: fixed;
    top: 0;
    padding: 0;
    background-color: white;
    padding: 10px 0;
    box-shadow: 0 4px 6px 0 rgba(10, 10, 10, 0.05);
    border: 0;
  }
</style>
